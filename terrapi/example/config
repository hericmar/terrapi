# In system time
[environment]
day_from = 09:00
day_to = 17:00
# seconds
measure_step = 10
# seconds
# data_post_step = 1200
data_post_step = 15

# Sensor is one physical quantity representation of physical sensor.
# In this example we use sensor.id := 0 for measuring humidity,
# although the DHT11 can measure temperature and humidity.
[sensor "dht11.humidity"]
type = DHT11
gpio = 4
physical_quantity = humidity

[sensor "dht11.temperature"]
type = DHT11
gpio = 4
physical_quantity = temperature


[timer "day"]
active_interval = 10:59, 21:57


[switch "lights"]
sensor = day
gpio = 17

[switch "heater"]
sensor = dht11.temperature
gpio = 27
rule = dht11.temperature < 22

[switch "humidifier"]
gpio = 22
oscillation_step = 6000
rule = dht11.humidity < 60

